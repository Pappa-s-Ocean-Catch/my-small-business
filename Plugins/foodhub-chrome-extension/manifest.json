{
  "manifest_version": 3,
  "name": "FoodHub Order Automation",
  "version": "1.0.0",
  "description": "Automate ordering process on FoodHub websites by clicking through menu items and adding them to cart",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://*.foodhub.com/*",
    "https://*.touch2success.com/*",
    "https://pappasoceancatch-ea.com.au/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "FoodHub Order Bot"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.foodhub.com/*",
        "https://*.touch2success.com/*",
        "https://pappasoceancatch-ea.com.au/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
